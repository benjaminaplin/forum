    <div class="formcontainer">
      <img src="<%=imgToAdd%>" alt="album" class="show_new_image">
      <h1> Make a Comment About the Album Cover you Chose </h1>
      <form method="POST" action="/">
        Name:
        <input name="name" type="text"><br>
        title:
        <input name="title" type="text"><br>
        twitter:
        <input name="twitter_id" type="text" value=""> <br>
        comment:
        <textarea name="comment" type="text"></textarea>
        <input type="hidden" value="<%=imgToAdd%>" name="picurl">
        <input type="submit"> 
      </form>
  </div><!--formcontainer-->

